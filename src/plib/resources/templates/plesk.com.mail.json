{
  "providerId": "plesk.com",
  "providerName": "Plesk",
  "serviceId": "mail",
  "serviceName": "Mail Hosting on Plesk",
  "version": 1,
  "warnPhishing": true,
  "logoUrl": "/modules/domain-connect/logos/plesk.com.web.png",
  "description": "Enables a mail hosting on the server powered by Plesk.",
  "variableDescription": "ip is the IP address of the server.",
  "records": [
    {
      "type": "A",
      "host": "mail.@",
      "pointsTo": "%ip%",
      "ttl": "600"
    },
    {
      "type": "A",
      "host": "webmail.@",
      "pointsTo": "%ip%",
      "ttl": "600"
    },
    {
      "type": "TXT",
      "host": "@",
      "pointsTo": "v=spf1 +a +mx +a:%mx% -all",
      "ttl": "600"
    }
  ]
}
