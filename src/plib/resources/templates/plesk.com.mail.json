{
  "providerId": "plesk.com",
  "providerName": "Plesk",
  "serviceId": "mail",
  "serviceName": "E-mail Hosting on Plesk",
  "version": 1,
  "warnPhishing": true,
  "logoUrl": "/modules/domain-connect/logos/plesk.com.mail.png",
  "description": "Enables a mail hosting on the server powered by Plesk.",
  "variableDescription": "ip is the IP address of the server.",
  "records": [
    {
      "groupId": "MailService",
      "type": "MX",
      "pointsTo": "%mxhost%",
      "host": "@",
      "priority": "%mxpriority%",
      "ttl": "600"
    },
    {
      "groupId": "MailService",
      "type": "A",
      "host": "%mxhost%",
      "pointsTo": "%mxip%",
      "ttl": "600"
    },
    {
      "groupId": "Verification",
      "type": "%spftype%",
      "host": "@",
      "data": "%spfdata%",
      "ttl": "600"
    },
    {
      "groupId": "Webmail",
      "type": "A",
      "host": "webmail",
      "pointsTo": "%webmailip%",
      "ttl": "600"
    }
  ]
}
